{
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "cache": false,
    "include": [
        "src/**/**.*"
    ],
    "extension": [
        ".ts"
    ],
    "reporter": [
        "html",
        "lcov",
        "text",
        "text-summary"
    ],
    "report-dir": "docs/reports/coverage",
    "temp-dir": "docs/",
    "require": [
        "ts-node/register",
        "source-map-support/register"
    ]
}