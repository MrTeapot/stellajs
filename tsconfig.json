{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "allowJs": true,
        "lib": [
            "es5"
        ],
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "es6"
    },
    "include": [
        "src"
    ]
}